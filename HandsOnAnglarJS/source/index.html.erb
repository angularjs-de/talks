<section ng-init="used=0;know=0;never_heard=0">


  <h2>Quick-Start</h2>

  <div style="margin-bottom:60px">How many of you ... AngularJS</div>

  <div class="left">
    <div class="left">

      <input type="number" ng-model="used" style="border-radius:10px;height:30px"/>
      <span style="vertical-align: middle;">used</span>
    </div>
    <div class="clear"></div>

    <div class="left">
      <input ng-model="know" type="number" style="border-radius:10px;height:30px"/>
      <span style="vertical-align: middle;">know</span>
    </div>
    <div class="clear"></div>

    <div class="left">
      <input ng-model="never_heard" type="number" style="border-radius:10px;height:30px"/>
      <span style="vertical-align: middle;">never heard about</span>
    </div>
  </div>



  <div class="right">

        <div class="poll poll1" style="height: {{used / (used + know + never_heard) * 5}}em;">
          <span ng-show="used">{{used}}</span>
        </div>
        <div class="poll poll2" style="height: {{know / (used + know + never_heard) * 5}}em;">
          <span ng-show="know">{{know}}</span>
        </div>
        <div class="poll poll3" style="height: {{never_heard / (used + know + never_heard) * 5}}em;">
          <span ng-show="never_heard">{{never_heard}}</span>
        </div>
  </div>

  <div class="clear"></div>

<div>
Sum: {{used + know + never_heard}}
</div>

</section>


